/* pages/indent/index.wxss */
.indent-container {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1rpx solid rgb(235, 233, 233);
  margin: 0 20rpx;
}

/* 订单商品 */
.goods {
  margin: 10rpx 20rpx 0;
  border: 1px solid #fff;
  border-radius: 20rpx;
  background-color: #fff;
}

.goods-msg {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.goods-text {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.goods-footer {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
}
.phone-address {
  display: block;
  flex-direction: row;
}
.goods-img {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border-radius: 20rpx;
}

.text {
  display: -webkit-box;
  width: 350rpx;
  line-height: 1.5;
  margin-top: 20rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgb(100, 99, 99);
  font-size: 30rpx;
}
.footer-text {
  margin-left: 50rpx;
  font-size: 30rpx;
  color: rgb(235, 212, 4);
}
.footer-price {
  margin-left: 300rpx;
}
/* 没有订单 */
.indent-text {
  text-align: center;
  margin-top: 50rpx;
  color: #ccc;
}

/* 确认收货 */
.confirm {
  border: 1rpx solid red;
  color: red;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-left: 400rpx;
  padding: 5rpx;
}
.footer {
  margin-bottom: 30rpx;
}