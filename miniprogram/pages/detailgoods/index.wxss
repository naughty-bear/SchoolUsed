/* pages/detailgoods/index.wxss */
page {
  width: 100%;
}
.swiper-item {
  width: 100%;
  height: 400rpx;
}
.swiper-img {
  width: 100%;
}
/* 商品发布人信息 */
.publisher {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  height: 140rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.publisher-user {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.user-text {
  margin-left: 20rpx;
  font-weight: 350;

}
.toStore {
  color: #f0c715;
  font-size: 28rpx;
  border: 1rpx solid #f0c715;
  height: 40rpx;
  width: 180rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 20rpx;
}
/* 商品详情 */
.detail-msg {
  margin-top: 20rpx;
}
.num-msg {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.detail-price {
  color: red;
  font-size: 50rpx;
}
.detail-num {
  color: #ccc;
  font-size: 24rpx;
}
.detail-text {
  display: flex;
  flex-direction: column;
}
.detail-container {
  margin: 10rpx 40rpx;
}
/* 底部 */
.detail-footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background-color: rgb(230, 230, 230);
  position: fixed;
  bottom: 0rpx;
}

