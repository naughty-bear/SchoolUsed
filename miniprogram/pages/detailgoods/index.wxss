/* pages/detailgoods/index.wxss */
page {
  width: 100%;
}
.swiper-item {
  width: 100%;
  height: 400rpx;
}
.swiper-img {
  width: 100%;
}
/* 商品详情 */
.detail-msg {
  margin: 20rpx;
}
.detail-price {
  display: block;
  color: red;
  font-size: 50rpx;
  padding-bottom: 20rpx;
  border-bottom:2rpx solid #ccc ;
  margin-bottom: 30rpx;
}
.detail-text {
  display: flex;
  flex-direction: column;
}
.detail-container {
  margin: 10rpx 40rpx;
}
/* 底部 */
.detail-footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background-color: rgb(230, 230, 230);
  position: fixed;
  bottom: 0rpx;
}
.cart {
  width: 80rpx;
  height: 80rpx;
  margin-left: 60rpx;
}
.cart-text {
  position: absolute;
  right: 0;
  width: 200rpx;
  height: 100%;
  background-color: red;
  text-align: center;
  line-height: 100rpx;
}