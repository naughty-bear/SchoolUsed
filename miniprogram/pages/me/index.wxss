/* pages/me/index.wxss */

.userMessage {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #15f0dd;
  padding: 40rpx 0;
}
.userHead {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 50rpx;
}
.logOut {
  color: red;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.recycle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
}
.recycle text {
  color: #ccc;
}
.Image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.toRight {
  width: 15rpx;
  height: 15rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg);
  margin-right: 20rpx;
}
.nav-btn {
  display: flex;
  align-items: center;
}
/* 清楚button默认样式 */
button {
  background-color: #fff;
  padding: 0;
  margin: 0;
  line-height: 1.3;
  border: none;
  text-align: left;
  font-size: 32rpx;
}
button::after {
  border: none;
  border-radius: 0;
}
