/* pages/home/home.wxss */
pages {
  width: 100%;
  position: relative;
}
/* 搜索框 */
.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 40rpx;
  margin: 20rpx;
  padding: 10rpx 20rpx 10rpx 70rpx;
  background-color: #fff;
}
.search-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 35rpx;
  left: 40rpx;
}
.search-input {
  width: 100%;
  height: 100rpx;
  background-color: #4fc08d;
  
}
.ipt-text {
  color: #ccc;
}
/* 轮播图 */
.swiper-container {
  height: 350rpx;
  margin: 10rpx 20rpx 20rpx;
  
}
.swiper-box {
  border-radius: 20rpx;
}
.swiper-img {
  width: 100%;
  height: 100%;
}

.goods-recommend {
  width: 100%;
  text-align: center;
}

/* 商品列表 */
.goods-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin:20rpx;
}
.goods-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 10rpx 30rpx;
}
.goods-title {
  width: 250rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.goods-img {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.goods-description {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}